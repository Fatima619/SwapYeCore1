<br />
<table border="3" class="table table-hover">
    <thead>
        <tr>
            <th>
                
               Image
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemName)
                
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transaction_type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item_State)
            </th>
            <th>
                Description
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                   
                    <img class="rounded" src="@Url.Content(@item.Image_1)" alt="somthing" width="50%" height="150" />
            </td>
            <td>
               
                    @Html.DisplayFor(modelItem => item.ItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Transaction_type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item_State)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Description_1)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.City.CityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemType.TypeNme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
           @* <td>
                <a asp-action="Edit" asp-route-id="@item.ItemID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ItemID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ItemID">Delete</a>
            </td>*@
       </tr>
}
    </tbody>
</table>

<br />
<div class="row">
    <div class="col-sm-12 col-md-12 m2">
        <pager class="pager-container"
               list="@((IPagedList)Model)"
               options="@PagedListRenderOptions.Bootstrap4PageNumbersOnly" />
    </div>
</div>
